<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-md-6 offset-md-3">
         <form class="validated-form" enctype="multipart/form-data" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" novalidate>
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" value="<%= campground.title %>" name="campground[title]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" value="<%= campground.location %>" name="campground[location]" required>
            </div>
            <div class="mg-3">
                <label class="form-control border-0" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" id="price" class="form-control" placeholder="0" name="campground[price]"  value="<%= campground.price %>" aria-label="price" aria-describedby="price-label" required>
                </div>
            </div>
                <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="campground[description]" required><%= campground.description %></textarea>
            </div>
            <div class="mb-3">
                <label for="formFileMultiple" class="form-label">Add more images</label>
                <input class="form-control" name="image" type="file" id="formFileMultiple" multiple>
                <small class="text-muted" id="fileNames">No files selected</small>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Campground</button>
            </div>
            <div class="mb-3">
                <% campground.images.forEach(function(img, i) { %>
                    <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                    <div class="form-check-inline">
                        <input id="image-<%= i %>" type="checkbox" name="deleteImages[]" value="<%= img.filename %>">
                    </div>
                    <label for="image-<%= i %>">Delete?</label>
                <% }) %>
            </div>
        </form>
        <a href="/campgrounds/<%= campground._id %>">Back To Campground</a>
    </div>
</div>
